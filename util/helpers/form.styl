form.form
	.select
		display inline-block
		position relative
		select
			width 100%
			background #FFF
			outline none
		&:after
			background #FFF
			box-sizing border-box
			content '\f107'
			font-family 'FontAwesome'
			height 100%
			padding 0.5em 0
			pointer-events none
			position absolute
			right 0
			width 1em
			display flex
			justify-content center
			align-items center
			top 0
			font-size 1.5em
	button
		cursor pointer
	input, select, button
		border none
		padding 0
