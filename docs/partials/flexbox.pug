article#grid-flex
	header.p10
		h2.fsp34 Flexbox Grid
		p Grid system using flex properties

	section
		article
			header
				h3.fw300.fsp26 Flex Columns
				p The columns will divide the space available between them
			section
				article
					each item in [1,3,5,7]
						.row.example
							- var n = 1
							while n <= item
								.col.tac.fsp8.col-sm
									div
								- n++
				article
					code.html
						pre
							+scape()
								// The columns will divide the space available between them
								each item in [1,3,5,7]
									.row
										- var n = 1
										while n <= item
											.col
											- n++
	section
		article
			header
				h3.fw300.fsp26 Flex stack column
				p These column will not be flexible and they will be stacked under its resolution size
		section
			article
				.row.example
					.col-md 
						.tac Full width under md
					.col-md 
						.tac Full width under md
					.col-md 
						.tac Full width under md
				code.html
					pre
						+scape()
							// These column will not be flexible and they will be stacked under its resolution size
							.row
								.col-md
								.col-md
								.col-md

	section
		article
			header
				h3.fw300.fsp26 Content width column

		section
			article
				.row.example
					each i in ["lorem ipsum", "hello world", "hi", "hi there"]
						.col-auto.tac
							div= i
				code.html
					pre
						+scape()
							.row
